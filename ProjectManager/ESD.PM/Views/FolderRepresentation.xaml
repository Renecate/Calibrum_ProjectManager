<Window x:Class="ESD.PM.Views.FolderRepresentation"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ESD.PM.Views"
        mc:Ignorable="d"
        Title="FolderRepresentation" Height="450" Width="840"
        WindowStyle="None">
    <Grid Background="#FFE3E8ED" Width="840" Height="450">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="25"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="50"/>
            <RowDefinition Height="30"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <StackPanel Orientation="Horizontal" Grid.Row="1" Grid.ColumnSpan="1">

        </StackPanel>
        <ListBox Grid.Row="2" Margin="5,5,5,5" Grid.ColumnSpan="1"/>
        <StackPanel Grid.Row="0" Orientation="Horizontal" Grid.ColumnSpan="1">
            <TextBox Width="350" Margin="5,5,5,5"/>
        </StackPanel>
        <Button Grid.Row="0" Grid.Column="2" Content="X" Height="25" Width="25" 
                HorizontalAlignment="Right" VerticalAlignment="Top"/>
    </Grid>
</Window>
